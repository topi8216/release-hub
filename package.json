{
  "name": "release-hub",
  "displayName": "Release Hub",
  "version": "0.0.0",
  "description": "One hub to manage every release",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/teneplaysofficial/release-hub"
  },
  "homepage": "https://teneplaysofficial.github.io/release-hub",
  "author": {
    "name": "Sriman",
    "email": "136729116+teneplaysofficial@users.noreply.github.com"
  },
  "funding": "https://github.com/sponsors/teneplaysofficial",
  "keywords": [
    "release",
    "versioning",
    "changelog",
    "automation",
    "semver",
    "conventional-commits",
    "deno",
    "jsr",
    "nodejs",
    "npm",
    "release-tool",
    "release-management",
    "ci",
    "cli",
    "devtools"
  ],
  "files": [
    "dist",
    "schema"
  ],
  "engines": {
    "node": ">=22"
  },
  "engineStrict": true,
  "type": "module",
  "bin": {
    "release-hub": "./dist/index.js"
  },
  "exports": {
    "./config": {
      "import": {
        "types": "./dist/config/index.d.ts",
        "default": "./dist/config/index.js"
      },
      "require": {
        "types": "./dist/config/index.d.cts",
        "default": "./dist/config/index.cjs"
      }
    }
  },
  "scripts": {
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "test": "vitest run --coverage",
    "build": "tsdown",
    "fmt": "prettier --write",
    "fmt:check": "prettier --check .",
    "lint": "eslint",
    "lint:fix": "npx eslint --fix",
    "gen": "yarn gen:schema",
    "gen:schema": "jiti scripts/generate-schema.ts"
  },
  "lint-staged": {
    "*.{yml,json,md}": [
      "yarn fmt"
    ],
    "*.ts": [
      "yarn lint:fix",
      "yarn lint",
      "yarn fmt"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all",
    "tabWidth": 2
  },
  "dependencies": {
    "ansilory": "^2.0.1",
    "figlet": "^1.9.3",
    "handlebars": "^4.7.8",
    "inquirer": "^12.10.0",
    "jiti": "^2.6.1",
    "semver": "^7.7.3",
    "sylog": "^1.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.38.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.5.0",
    "@types/node": "^24.9.1",
    "@types/semver": "^7.7.1",
    "@vitest/coverage-v8": "4.0.4",
    "eslint": "^9.38.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.9",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.4"
  }
}
